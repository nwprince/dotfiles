[core]
	editor = nano
	excludesfile= ~/.gitignore

[push]
	default = current
[alias]
	up = "!git remote update -p; git merge --ff-only @{u}"
	sub = "!git submodule update --init --recursive -j 8"
	diff = "diff-so-fancy | less --tabs=1,5 -RFX"
	show = "diff-so-fancy | lass --tabs=1,5 -RFX"
