function mpvm() {
	currentdir=$(pwd)
	movieDir=$(find /mnt/Movies/Movies/ -type d -name '*'$1'*')
	cd $movieDir
	file=$(find . -iname '*.mkv' -o -iname '*.mp4')
	mpv $file &
	cd $currentDir
}

function mpvt() {
