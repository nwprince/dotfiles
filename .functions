getnews () {
  curl https://newsapi.org/v2/everything -s -G \
    -d q=$1 \
    -d sortBy=popularity \
    -d apiKey=ea63aa78ccb4416c8e43d8d63d467ba4 \
    | jq '.articles[] | .title'
}

